<% include ../partials/header %>

    <div class="container">
    <h1 class="text-center">Pessoas cadastradas</h1>
    <a class="btn btn-primary float-right" href="/pessoas/create">Cadastras pessoas</a>
   
   <table class="table table-striped table-bordered ">
    <thead class="thead-inverse">
        <tr>
            <th>Nome</th><th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% result.map(content => { %>
        <tr><td><%= content.nome %></td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="/pessoas/edit/<%= content.id%>" type="button" class="btn btn-warning">Editar</a>
                    <a href="/pessoas/delete/<%= content.id%>" type="button" class="btn btn-danger" onclick="return confirm('Deseja realmente excluir? ')">Remover</a>
                </div>
            </td>
        </tr>
        <% }) %>
    </tbody>
   
    </table>

    </div>

<% include ../partials/footer %>