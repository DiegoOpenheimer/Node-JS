<% include ../partials/header %>

    <div class="container novas-pessoas">
    <h1 class="tituloNovasPessoas">Novas Pessoas</h1>
    <a class="btn btn-primary float-right" href="/pessoas">Voltar para pessoas</a>
      <form style="margin-top: 60px" method="post">
            <div class="form-group">
              <label for="nome">Nome</label>
              <input name="nome" required type="text" maxlength="30" class="form-control" id="nome" aria-describedby="emailHelp" placeholder="Informe nome">
            </div>
           
            <div class="form-group">
              <label for="nascimento">Nascimento</label>
              <input name="nascimento" required type="text" maxlength="10" class="form-control" id="nascimento" placeholder="YYYY-MM-DD">
            </div>
           
            <div class="form-group">
              <label for="cargo">Cargo</label>
              <input name="cargo" required type="text"maxlength="20" class="form-control" id="cargo" placeholder="Informe cargo">
            </div>
           
            <button type="submit" class="btn btn-primary">Adicionar</button>
   </form>
              

    </div>

<% include ../partials/footer %>