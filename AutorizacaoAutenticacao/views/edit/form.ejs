<% include ../partials/header %>

      <div class="starter-template">
        <h1>Editar Notícia</h1>
      
        <form class="col-md-6 mx-auto" method="post">
            <div class="form-group">
                <label for="idTitulo">Título</label>
                <input name="title" value="<%=noticia.title%>"type="text" class="form-control" id="idTitulo" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="idConteudo">Conteúdo</label>
                <textarea name="content" type="text" class="form-control" id="idConteudo"><%=noticia.content%></textarea>
            </div>
            <div class="form-check">
              Categoria: 
              <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input <% if(noticia.category == 'Public'){%> checked <%}%> class="form-check-input" type="radio" name="Category" id="inlineRadio1" value="Public"> Publica
                </label>
                </div>
                <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input <% if(noticia.category == 'Private'){%> checked <%}%> class="form-check-input" type="radio" name="Category" id="inlineRadio2" value="Private"> Privada
                </label>
                </div>
                
            </div>
            <button onclick="return confirm('Correto disso? ')"type="submit" class="btn btn-primary">Enviar</button>
        </form>
      </div>
    
<% include ../partials/footer %>