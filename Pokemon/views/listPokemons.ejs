<% include partials/header %>

    <div class="container">
        <div class="row">
        <div class="col-lg-12 text-center">
            <img src ="/assets/images/pokemonTitle.png" width="250px" height="100px"/>
        </div>
       <div class="col-md-4">
          <form method="get" action="/pokemons/info">

              <input name="name" class="form-control float-left" style="width: 70%" type="text" required maxlength="30" placeholder="Find a pokemon"/>
              <button class="btn btn-primary float-right">Search</button>
          </form>
       </div>
       <div class="col-md-6"></div>
       <ul class="list-group col-md-6" style="margin-top: 20px">
         <% for(let i  = 0; i < results.results.length / 2; i++) {%>
                <a href="/pokemons/info/<%=results.results[i].name %>"><li class="list-group-item text-center"><span class="pokeball"></span><%=results.results[i].name%></li></a>
        
         <%}%>
        </ul>
         <ul class="list-group col-md-6 "style="margin-top: 20px">
         <% for(let i  = 10; i < results.results.length; i++) {%>
        
               <a href="/pokemons/info/<%=results.results[i].name %>"><li class="list-group-item text-center"> <span class="pokeball"></span><%=results.results[i].name%></li></a>
        
         <%}%>
        </ul>
  
<nav aria-label="navigation mx-auto">
  <ul class="pagination">
      <% if(results.previous !== null && results.results.length > 0) { %>

        <li class="page-item">
          <a class="page-link" href="/pokemons/?limit=<%=parseInt(locals.limit) - 1 %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
  <%}%>  
    <% if(results.results.length > 0 && results.next !== null) { %>

    
      <%for(let i = locals.limit; i <= parseInt(locals.limit) + 4; i++) { %>
       <% if(i <= 41) { %>
         <li class="page-item"><a class="page-link" href="/pokemons/?limit=<%=i %>"><%=i%></a></li>
      <% } %>
        
    <%}}%>
   <% if(results.next !== null && results.results.length > 0) { %>
  
      <li class="page-item">
        <a class="page-link" href="/pokemons/?limit=<%=parseInt(locals.limit) + 1 %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    <%}%>
  </ul>
</nav>
        </div>
    </div>
    


<% include partials/footer %>